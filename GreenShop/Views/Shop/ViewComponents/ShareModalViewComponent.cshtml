@model IEnumerable<ProductViewModel>
<button class="col-6 btn btn-danger" type="button" data-target="#exampleModal">Share</button>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Share this product!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form-group" method="post">
                    <label class="col-form-label col-2"></label>
                    <input class="form-control col-8" type="email" name="targetEmail"/>
                <a class="col-6 btn btn-success col-2" asp-controller="Share" asp-action="ShareProductByEmail" asp-route-productId="@Model" type="button">Share</a>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>